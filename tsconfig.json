{
    "compileOnSave": false,
    "compilerOptions": {
      "outDir": "dist",
      "target": "es5",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2016", "es2017", "es2018"
      ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }
  